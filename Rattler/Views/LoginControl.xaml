<UserControl x:Class="Rattler.Views.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rattler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800" Background="#5ED0BD">
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="20">
            <Label Content="Логин" Margin="40 0 40 0" Foreground="#FF7400" FontSize="18"/>
                <TextBox Name="txtUsername" Margin="40 0 40 0" Background="#00A287" Foreground="#FFAB73" FontSize="20"/>
                <Label Content="Пароль" Margin="40 0 40 0" Foreground="#FF7400" FontSize="18"/>
                <PasswordBox Name="txtPassword" Margin="40 0 40 0" Background="#00A287" Foreground="#FFAB73" FontSize="20"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Войти" Margin="130 20" Background="#1E796A" Foreground="#FFAB73" FontSize="20"/>
            </StackPanel>
        </Grid>
    <!--</Border>-->
</UserControl>
